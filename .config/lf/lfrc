set hidden true
set ignorecase true
set icons true
set previewer ~/.config/lf/pv.sh

# open function
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) xdg-open "$f" ;;
    esac
}}

# mkdir function
cmd mkdir ${{
  printf "DirName: "
  read ans
  mkdir $ans
}}

# touch file and open it in editor
cmd newfile ${{
  printf "FileName: "
  read ans
  $EDITOR $ans
}}

# chmod file(s)
cmd chmod ${{
  printf "chmod: "
  read ans

  for file in "$fx"; do
    chmod $ans $file
  done

  lf -remote 'send reload'
}}

# change wallpaper
cmd wallpaper ${{
  swww img -t grow --transition-pos=top-left $f 
}}

# dragon file
cmd dragon $ {{
  dragon-drop -a -x $fx
}}

# Clear default mappings
map d
map c

# Mappings
map md mkdir
map t newfile
map ch chmod
map dg dragon
map i $~/.config/lf/pv.sh $f

# Navigation
map gp cd ~/Projects/
map gc cd ~/.config/
map gh cd ~/
